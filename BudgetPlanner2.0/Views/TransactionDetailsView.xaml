<UserControl x:Class="BudgetPlanner2._0.Views.TransactionDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner2._0.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:viewmodels="clr-namespace:BudgetPlanner2._0.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:TransactionDetailsViewModel}">
    <Grid>
        <StackPanel Orientation="Vertical"
            Grid.Column="1" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <TextBlock Text="{Binding SelectedTransaction.Description}" 
               FontSize="26" FontWeight="Bold" 
               Foreground="Gray" 
               Margin="0,0,0,20"/>

            <Grid Margin="0,0,0,10" 
          ColumnDefinitions="Auto,*">
                <TextBlock Text="Description:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                 Text="{Binding SelectedTransaction.Description}" />
            </Grid>

            <Grid Margin="0,0,0,10"
          ColumnDefinitions="Auto,*">
                <TextBlock Text="Amount:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                 Text="{Binding SelectedTransaction.Amount}" />
            </Grid>

            <Grid Margin="0,0,0,10"
          ColumnDefinitions="Auto,*">
                <TextBlock Text="Date:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding SelectedTransaction.Date, StringFormat=\{0:yyyy-MM-dd\}}"/>
            </Grid>

            <Grid Margin="0,0,0,10"
          ColumnDefinitions="Auto,*,*">
                <TextBlock Text="Category:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding SelectedTransaction.Category.Name}" />
            </Grid>

            <StackPanel Orientation="Horizontal"  Margin="0,0,0,20">
                <TextBlock Text="Income:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <CheckBox IsChecked="{Binding SelectedTransaction.IsIncome}"
                          IsEnabled="False"/>
            </StackPanel>

            <Grid Margin="0,0,0,10"
          ColumnDefinitions="Auto,*">
                <TextBlock Text="Recurrence:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding SelectedTransaction.RecurrenceType}"/>
            </Grid>
            <Button Content="Go Back"
                    Grid.Column="2"
                    Style="{StaticResource ModernButtonStyle}"
                    Command="{Binding NavigateBackCommand}"
                    Margin="0,10,10,10"
                    Height="40"/>
            

        </StackPanel>
    </Grid>
</UserControl>
